@model Projekt_WypozyczalniaFilmow.DAO.User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginAction" method="POST">
            <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required="required"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" required="required"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">
        <button class="btn btn-primary">
            Back
        </button>
        </a>
</div>

