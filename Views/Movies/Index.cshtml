@model IEnumerable<Projekt_WypozyczalniaFilmow.Models.Movie>

@{
    ViewData["Title"] = "Index";
}


<a asp-controller="Home" asp-action="Index">Logo</a>

<form asp-controller="Movies" asp-action="Index" method="GET">
    <div class="form-group">
        <label class="control-label">Name: </label><input type="text"  class="form-control" name="name" value="@(Context.Request.Query["name"])" />
        <input type="submit" class="btn btn-primary" value="Search" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories)
            </td>
            @if(@Context.Session.GetInt32("role") == (int)PermissionRole.Admin)
                {
                <td>
                    <a class="btn btn-primary" asp-action="Create" asp-route-id="@item.Id">Create New</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-primary" asp-controller="Lends" asp-action="Index" asp-route-id="@item.Id">
                            Wypożycz
                            </a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>
